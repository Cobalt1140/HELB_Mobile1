<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/WOTD_Constraint_Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.dailyWord.DailyWordFragment">


    <TextView
        android:id="@+id/WOTD_Word_Text"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:text="Word of the Day"
        android:textAlignment="center"
        android:textSize="24sp"

        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WOTD_Countdown_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/WOTD_Word_Text"
        app:layout_constraintEnd_toEndOf="@+id/WOTD_Word_Text"
        app:layout_constraintStart_toStartOf="@+id/WOTD_Word_Text"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>